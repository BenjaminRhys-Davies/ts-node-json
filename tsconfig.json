{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es2017", "dom"],
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs"
  },
  "exclude":[
    "node_modules",
    "build"
  ]
}